cd /opt
wget "https://discordapp.com/api/download/canary?platform=linux&format=tar.gz" -O /opt/discord.tar.gz && tar -zxvf /opt/discord.tar.gz
mv /opt/DiscordCanary/DiscordCanary /opt/DiscordCanary/Discord
cd /opt/DiscordCanary/powercord
git pull
discord & 
disown
npm i
read  -n 1 -p "Press a Key to Continue: " mainmenuinput
print \\n
sudo npm run unplug
sudo npm run plug
pgrep Discord | while read -r line ; do kill -9 $line ; done
